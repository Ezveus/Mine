<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize @user.errors.count, "error" %> 
      made your registration impossible</h2>
    <p>Here <%= conjugBe :third, @user.errors.count %> the
    <%= pluralize @user.errors.count, "error" %> :</p>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
